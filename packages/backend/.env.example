# Database Configuration (Railway MySQL)
DATABASE_URL=mysql://user:password@host:port/database

# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI API Key (for content generation)
OPENAI_API_KEY=your-openai-api-key
# Optional: Custom OpenAI-compatible API base URL (for OpenRouter, Together, etc.)
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_PRO=price_pro_monthly_id
STRIPE_PRICE_ID_BUSINESS=price_business_monthly_id

# Frontend URL (for CORS and Stripe redirects)
FRONTEND_URL=http://localhost:5173
